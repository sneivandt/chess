{
    "version": 3,
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build-${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "dev",
            "description": "Debug build with warnings",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "WARNINGS_AS_ERRORS": "OFF"
            }
        },
        {
            "name": "prod",
            "description": "Release build with warnings as errors",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "WARNINGS_AS_ERRORS": "ON"
            }
        },
        {
            "name": "asan",
            "description": "Debug build with Address Sanitizer",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "ENABLE_SANITIZER_ADDRESS": "ON",
                "ENABLE_SANITIZER_UNDEFINED": "ON"
            }
        },
        {
            "name": "tsan",
            "description": "Debug build with Thread Sanitizer",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "ENABLE_SANITIZER_THREAD": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "dev",
            "configurePreset": "dev"
        },
        {
            "name": "prod",
            "configurePreset": "prod"
        },
        {
            "name": "asan",
            "configurePreset": "asan"
        }
    ],
    "testPresets": [
        {
            "name": "dev",
            "configurePreset": "dev",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "prod",
            "configurePreset": "prod",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "asan",
            "configurePreset": "asan",
            "output": {
                "outputOnFailure": true
            }
        }
    ]
}